!!!
%html
  %head
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Tweet Composer'
    %meta{name: "description", content: "#{content_for?(:description) ? yield(:description) : 'Tweet Composer'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{role: "main"}
      = render 'layouts/messages'
      = yield
    #notification-area
    #myModal.modal.fade{role: "dialog"}
      .modal-dialog
        .modal-content
          .modal-header
            %button.close.glyphicon.glyphicon-remove{"data-dismiss" => "modal", type: "button"}
            %h4.modal-title Search Results
          .modal-body
            %ul.resultList
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close

